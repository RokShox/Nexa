{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src;${env:PYTHONPATH}"
            },
            "args": "${command:pickArgs}",
        },

        {
            "name": "Python: Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\src\\nexa\\main.py",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src;${env:PYTHONPATH}"
            }
        },

        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}\\src;${env:PYTHONPATH}"
            },
            "console": "integratedTerminal",
            "args": ["chb04umo"],
        },
    ]
}